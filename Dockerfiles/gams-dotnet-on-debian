FROM mcr.microsoft.com/dotnet/runtime:6.0-bullseye-slim AS base
RUN apt-get update -y && apt-get install curl -y
RUN cd ../ &&\
	mkdir gams &&\
	cd gams &&\
	curl -O https://d37drm4t2jghv5.cloudfront.net/distributions/38.1.0/linux/linux_x64_64_sfx.exe
RUN cd ../gams &&\
	chmod 755 linux_x64_64_sfx.exe &&\
	./linux_x64_64_sfx.exe &&\
	rm linux_x64_64_sfx.exe
ENV PATH=$PATH:/gams/gams38.1_linux_x64_64_sfx